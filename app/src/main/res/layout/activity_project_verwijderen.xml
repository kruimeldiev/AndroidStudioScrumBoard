<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/colorPrimary"
    tools:context=".ProjectVerwijderen">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Project verwijderen"
        android:textSize="36sp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alleen de Product Owner is in staat om een project te verwijderen. Heeft u de rol van Developer, dan bent u wel in staat om een project te verlaten."
        android:layout_marginHorizontal="35dp"
        android:textAlignment="center"
        android:layout_marginVertical="20dp"/>

    <LinearLayout
        android:layout_marginHorizontal="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="5dp"
        android:layout_marginVertical="20dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_project_naam"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/naamVanProjectVerwijderen"
            android:hint="Naam van project"
            android:background="@drawable/edittextveld"
            android:paddingEnd="20dp"
            android:inputType="text"
            android:paddingStart="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/projectVerwijderenKnop"
            android:textColor="@color/colorPrimary"
            android:text="Verwijderen"
            android:textAllCaps="false"
            android:background="@drawable/knop"
            android:layout_margin="10dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/annuleerProjectVerwijderenKnop"
            android:textColor="@color/colorPrimary"
            android:text="Annuleer"
            android:textAllCaps="false"
            android:background="@drawable/knop"
            android:layout_margin="10dp"/>
    </LinearLayout>

</LinearLayout>